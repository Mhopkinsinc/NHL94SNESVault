{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Export Folder",
            "type": "shell",
            "command": "cmd",
            "args": ["/C", "if not exist Output mkdir Output"],
            "problemMatcher": [],
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist Output mkdir Output"]
            },
            "linux": {
                "command": "mkdir",
                "args": ["-p", "Output"]
            },
            "osx": {
                "command": "mkdir",
                "args": ["-p", "Output"]
            }
        },
        {
            "label": "Compile Rom(smc)",
            "type": "process",
            "command": "ASAR\\asar-domfix.exe",
            "args": ["--fix-checksum=off","Src\\main.asm","Output\\nhl94.smc"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "ASAR\\asar-domfix.exe",
                "args": ["--fix-checksum=off","Src\\main.asm","Output\\nhl94.smc"]
            },
            "linux": {
                "command": "./ASAR/asar-domfix",
                "args": ["--fix-checksum=off","Src/main.asm","Output/nhl94.smc"]
            },
            "osx": {
                "command": "./ASAR/asar-domfix",
                "args": ["--fix-checksum=off","Src/main.asm","Output/nhl94.smc"]
            }
        },
        {
            "label": "Compile Rom(sfc)",
            "type": "process",
            "command": "ASAR\\asar-domfix.exe",
            "args": ["--fix-checksum=off","Src\\main.asm","Output\\nhl94.sfc"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "ASAR\\asar-domfix.exe",
                "args": ["--fix-checksum=off","Src\\main.asm","Output\\nhl94.sfc"]
            },
            "linux": {
                "command": "./ASAR/asar-domfix",
                "args": ["--fix-checksum=off","Src/main.asm","Output/nhl94.sfc"]
            },
            "osx": {
                "command": "./ASAR/asar-domfix",
                "args": ["--fix-checksum=off","Src/main.asm","Output/nhl94.sfc"]
            }
        },
        {
            "label": "Copy Roms",
            "type": "shell",            
            "command": "cmd",
            "args": ["/c", "copy Output\\nhl94.smc C:\\_Personal\\Roms && copy Output\\nhl94.sfc C:\\_Personal\\Roms"],
            "problemMatcher": [],
            "dependsOn": ["Create Export Folder","Compile Rom(smc)","Compile Rom(sfc)"],
            "windows": {
                "command": "cmd",
                "args": ["/c", "copy Output\\nhl94.smc C:\\_Personal\\Roms && copy Output\\nhl94.sfc C:\\_Personal\\Roms"]
            },
            "linux": {
                "command": "cp",
                "args": ["Output/nhl94.smc", "~/Roms", "&&", "cp", "Output/nhl94.sfc", "~/Roms"]
            },
            "osx": {
                "command": "cp",
                "args": ["Output/nhl94.smc", "~/Roms", "&&", "cp", "Output/nhl94.sfc", "~/Roms"]
            }
        },
        {
            "label": "Compile Rom and Copy",
            "dependsOn": ["Copy Roms"],
            "problemMatcher": []
        },
        {
            "label": "Compile Roms",            
            "problemMatcher": [],
            "dependsOn": ["Compile Rom(smc)", "Compile Rom(sfc)"]
        }
    ]
}